<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>

    <item
        android:top="40dp"
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp"
        android:gravity="center">
        
        <animated-rotate
            android:drawable="@drawable/shape_circle_loading"
            android:pivotX="50%"
            android:pivotY="50%" />

    </item>
</layer-list>